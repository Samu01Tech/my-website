---
import "../styles/main.css";
---

<h1 class="display-text">Display Text</h1>
<h2 class="headline-text">Headline Text</h2>

<style>
  .view {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 0px;
    gap: 4em;
  }
  .display-text {
    font-style: normal;
    font-weight: 400;
    font-size: 3.5rem;
    line-height: 4rem;
  }
  .headline-text {
    font-weight: 400;
    font-size: 1.5rem;
    line-height: 2rem;
  }
</style>
